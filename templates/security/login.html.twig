		<link rel="stylesheet" href="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"/>
		<link rel="stylesheet" href="../assets/vendor/css/pages/page-auth.css"/>
		<script src="../assets/vendor/js/helpers.js"></script>
		<script src="../assets/js/config.js"></script>
	</head>

	<body>
		<div class="container-xxl">
			<div class="authentication-wrapper authentication-basic container-p-y">
				<div class="authentication-inner">
					<div class="card">
						<div class="card-body">
							<a href="{{ path('app_homepage') }}">
								<div class="app-brand justify-content-center" style="margin-bottom: 1.5rem;">
									<img src="../assets/img/images/Logo-Cercle.png" alt="logo" class="app-brand-logo me-2" style="width: 81px;">
								</div>
							</a>
							<h4 class="mb-2">Bienvenue sur WanderWings! ðŸ‘‹</h4>
							<p class="mb-4">Veuillez vous connecter Ã  votre compte et commencer l'aventure</p>
							<form id="formAuthentication" class="mb-3" method="POST">
								{% if error %}
									<div class="alert alert-warning alert-dismissible" role="alert">
										{{ error.messageKey|trans(error.messageData, 'security') }}
										<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
									</div>
									{% if app.user %}
										<div class="mb-3">
											<div class="alert alert-secondary" role="alert">Connecter en tant que
												{{ app.user.username }},
												<a href="{{ path('app_logout') }}">Logout</a>
											</div>
										</div>
									{% endif %}
								{% endif %}
								<div class="mb-3">
									<label for="email" class="form-label">Email</label>
									<input type="email" class="form-control" value="{{ last_username }}" id="email" name="email" placeholder="Enter votre Email" autofocus/>
								</div>
								<div class="mb-2 form-password-toggle">
									<div class="d-flex justify-content-between">
										<label class="form-label" for="password">Mot de passe</label>
										<a href="{# {{path('app_forgot_password_request')}} #}">
											<small>Mot de passe oubliÃ©?</small>
										</a>
									</div>
									<div class="input-group input-group-merge mb-4">
										<input type="password" id="password" class="form-control" name="password" placeholder="Enter votre mot de passe" aria-describedby="password"/>
										<span class="input-group-text cursor-pointer">
											<i class="bx bx-hide"></i>
										</span>
									</div>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="mb-3">
										<button class="btn btn-primary d-grid w-100" type="submit">Connecter</button>
									</div>
								</form>
								<p class="text-center">
									<span>Nouveau sur notre plateforme ?</span>
									<a href="{{ path('app_register') }}">
										<span>CrÃ©er un compte</span>
									</a>
								</p>
							</div>
							<div class="divider my-4">
								<div class="divider-text">or</div>
							</div>
							<div class="d-flex justify-content-center">
								<a href="{# {{ path('fcb_login') }} #}" class="btn btn-icon btn-label-facebook me-3">
									<i class="tf-icons bx bxl-facebook"></i>
								</a>
								<a href="javascript:;" class="btn btn-icon btn-label-google-plus me-3">
									<i class="tf-icons bx bxl-google"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<script src="../assets/vendor/libs/jquery/jquery.js"></script>
			<script src="../assets/vendor/libs/popper/popper.js"></script>
			<script src="../assets/vendor/js/bootstrap.js"></script>
			<script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
			<script src="../assets/vendor/js/menu.js"></script>
			<script src="../assets/js/main.js"></script>
			<script async defer src="https://buttons.github.io/buttons.js"></script>
		</body>
	</body>
</html>
