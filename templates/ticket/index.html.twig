{% extends "dashboard/adminbase.html.twig" %}
{% block title %}
    Admin Dashboard - Tickets
{% endblock %}
{% block AdminContent %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card mb-4">
                <div class="card">
                    <h5 class="card-header">Liste des tickets</h5>
                    <div class="card-datatable table-responsive">
                        <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper dt-bootstrap5">
                            <table class="dt-fixedheader table border-top dataTable dtr-column" id="userTable" aria-describedby="DataTables_Table_1_info" style="width: 1388px;">
                                <thead>
                                <tr>
                                    <th class="control sorting_disabled dtr-hidden" rowspan="1" colspan="1" style="width: 0px; display: none;" aria-label=""></th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 200px;" aria-label="Name: activate to sort column ascending">Id</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 190px;" aria-label="Email: activate to sort column ascending">Number</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 106px;" aria-label="Salary: activate to sort column ascending">Price</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 144px;" aria-label="Status: activate to sort column ascending">User</th>
                                    <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 87px;" aria-label="Actions">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ticket in tickets %}
                                    <tr class="odd">
                                        <td class="  control" tabindex="0" style="display: none;"></td>
                                        <td>{{ ticket.id }}</td>
                                        <td>{{ ticket.number }}</td>
                                        <td>{{ ticket.price }}</td>
                                        <td>{{ ticket.User.name }} {{ ticket.User.prename }}</td>
                                        <td>
                                            <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-sm btn-icon item-edit">
                                                <i class='bx bx-show'></i>
                                            </a>
                                            <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-sm btn-icon item-edit">
                                                <i class="bx bxs-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div style="width: 1%;"></div>
                        </div>
                    </div>
                </div>
                <div class="content-backdrop fade"></div>
            </div>
        </div>
    </div>
<div class="buy-now">
	<a href="{{path('app_ticket_new')}}" class="btn btn-primary btn-buy-now">New Ticket</a>

	
</div>
{% endblock %}

